<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Sitting.Views.WorkerPage"
    Title="Worker Dashboard">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label
            Text="Worker Dashboard"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Label
            Text="Welcome, worker! You are now logged in."
            FontSize="18"
            HorizontalOptions="Center" />

        <!-- Placeholder for future worker tools -->
        <BoxView HeightRequest="2" BackgroundColor="Gray" />
        <Label Text="(Worker tools will appear here)" FontSize="14" HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>