<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sitting.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Sitting"
    xmlns:views="clr-namespace:Sitting.Views"
    Title="Sitting">

    <!-- Login Page -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- Admin Dashboard -->
    <ShellContent
        Title="Admin Dashboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="AdminDashboard" />

    <!-- Worker Dashboard --><!--
    <ShellContent
        Title="Worker Dashboard"
        ContentTemplate="{DataTemplate views:WorkerDashboardPage}"
        Route="WorkerDashboard" />-->

    <!-- Worker Page -->
    <ShellContent
        Title="Worker"
        ContentTemplate="{DataTemplate views:WorkerPage}"
        Route="WorkerPage" />

    <ShellContent
        Title="View Workers"
        ContentTemplate="{DataTemplate views:ViewWorkersPage}"
        Route="ViewWorkersPage" />

    <ShellContent
        Title="Create Task"
        ContentTemplate="{DataTemplate views:CreateTaskPage}"
        Route="CreateTaskPage" />

</Shell>