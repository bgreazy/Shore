<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sitting.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Sitting"
    xmlns:views="clr-namespace:Sitting.Views"
    Title="Sitting">

    <!-- Login Page -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- Dashboard Page -->
    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="DashboardPage" />

    <!-- Worker Page -->
    <ShellContent
        Title="Worker"
        ContentTemplate="{DataTemplate views:WorkerPage}"
        Route="WorkerPage" />

</Shell>