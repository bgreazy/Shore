<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Sitting.Views"
             x:Class="Sitting.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- 🎨 Indigo Theme -->
            <Color x:Key="PrimaryIndigo">#111184</Color>
            <Color x:Key="AccentIndigo">#3F51B5</Color>
            <Color x:Key="PageBackgroundColor">#0D0D3A</Color>
            <Color x:Key="TextColor">#E0E0FF</Color>

            <!-- 📄 Page Background -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource PageBackgroundColor}" />
            </Style>

            <!-- 🔘 Button Styling -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#2C2C8A" />
                <!-- Softer indigo -->
                <Setter Property="TextColor" Value="#E0E0FF" />
                <!-- Soft lavender-white -->
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Padding" Value="10,6" />
            </Style>

            <!-- 🏷️ Label Styling -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TextColor}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>